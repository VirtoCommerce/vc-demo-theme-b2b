<form accept-charset="UTF8" name="memberDetailForm" novalidate="novalidate">
    <div class="form-group" ng-init="$ctrl.setForm(memberDetailForm)">

        <div class="form-group" ng-show="$ctrl.showField('CompanyName')">
            <div class="row">
                <div class="col-md-8">
                    <label for="CompanyName" ng-class="{'required': $ctrl.requiredField('CompanyName') }">{{ 'customer.register.company_name' | t }}</label>
                    <input ng-model="$ctrl.member.companyName" name="CompanyName" ng-class="{'is-invalid': (memberDetailForm.CompanyName.$dirty || memberDetailForm.$submitted) && memberDetailForm.CompanyName.$invalid }" type="text" placeholder="{{ 'customer.register.company_name' | t }}" class="form-control" ng-required="$ctrl.requiredField('CompanyName')" ng-disabled="$ctrl.disableField('CompanyName')"></input>
                    <span class="text-danger" ng-if="(memberDetailForm.CompanyName.$dirty || memberDetailForm.$submitted) && memberDetailForm.CompanyName.$error.required" ng-bind="'{{ 'common.required' | t }}'"></span>
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="row">
                <div class="col-md-8">
                    <label for="first_name" class="required">{{ 'customer.edit_profile.first_name' | t }}</label>
                    <input ng-model="$ctrl.member.firstName" name="first_name" ng-class="{'is-invalid': (memberDetailForm.first_name.$dirty || memberDetailForm.$submitted) && memberDetailForm.first_name.$invalid }" type="text" placeholder="{{ 'customer.edit_profile.first_name' | t }}" class="form-control" required></input>
                    <span class="text-danger" ng-if="(memberDetailForm.first_name.$dirty || memberDetailForm.$submitted) && memberDetailForm.first_name.$error.required" ng-bind="'{{ 'common.required' | t }}'"></span>
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="row">
                <div class="col-md-8">
                    <label for="last_name" class="required">{{ 'customer.edit_profile.last_name' | t }}</label>
                    <input ng-model="$ctrl.member.lastName" name="last_name" ng-class="{'is-invalid': (memberDetailForm.last_name.$dirty || memberDetailForm.$submitted) && memberDetailForm.last_name.$invalid }" placeholder="{{ 'customer.edit_profile.last_name' | t }}" class="form-control" required></input>
                    <span class="text-danger" ng-if="(memberDetailForm.last_name.$dirty || memberDetailForm.$submitted) && memberDetailForm.last_name.$error.required" ng-bind="'{{ 'common.required' | t }}'"></span>
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="row">
                <div class="col-md-8">
                    <label for="title">{{ 'customer.register.job_title' | t }}</label>
                    <input ng-model="$ctrl.member.title" type="text" name="title" placeholder="{{ 'customer.register.job_title_placeholder' | t }}" class="form-control"></input>
                </div>
            </div>
        </div>
        <div class="form-group" ng-show="$ctrl.showField('Email')">
            <div class="row">
                <div class="col-md-8">
                    <label for="Email" ng-class="{'required': $ctrl.requiredField('Email') }">{{ 'customer.edit_profile.email' | t }}</label>
                    <input ng-model="$ctrl.member.email" name="Email" ng-class="{'is-invalid': (memberDetailForm.Email.$dirty || memberDetailForm.$submitted) && memberDetailForm.Email.$invalid }" type="email" placeholder="{{ 'customer.edit_profile.email' | t }}" class="form-control" ng-required="$ctrl.requiredField('Email')" ng-disabled="$ctrl.disableField('Email')"></input>
                    <span class="text-danger" ng-if="(memberDetailForm.Email.$dirty || memberDetailForm.$submitted) && memberDetailForm.Email.$error.required" ng-bind="'{{ 'common.required' | t }}'"></span>
                    <span class="text-danger" ng-if="(memberDetailForm.Email.$dirty || memberDetailForm.$submitted) && !memberDetailForm.Email.$error.required && memberDetailForm.Email.$invalid">{{ 'common.invalid' | t }}</span>
                </div>
            </div>
        </div>
        <div class="form-group" ng-show="$ctrl.showField('UserName')">
            <div class="row">
                <div class="col-md-8">
                    <label for="UserName" ng-class="{'required': $ctrl.requiredField('UserName') }">{{ 'customer.register.user_name' | t }}</label>
                    <input ng-model="$ctrl.member.userName" type="text" ng-class="{'is-invalid': (memberDetailForm.UserName.$dirty || memberDetailForm.$submitted) && memberDetailForm.UserName.$invalid }" name="UserName" placeholder="{{ 'customer.register.user_name' | t }}" class="form-control" ng-required="$ctrl.requiredField('UserName')" ng-disabled="$ctrl.disableField('UserName')"></input>
                    <span class="text-danger" ng-if="(memberDetailForm.UserName.$dirty || memberDetailForm.$submitted) && memberDetailForm.UserName.$error.required" ng-bind="'{{ 'common.required' | t }}'"></span>
                </div>
            </div>
        </div>
        <div class="form-group" ng-show="$ctrl.showField('Password')">
            <div class="row">
                <div class="col-md-8">
                    <label for="Password" ng-class="{'required': $ctrl.requiredField('Password') }">{{ 'customer.register.password' | t }}</label>
                    <input ng-model="$ctrl.member.password" type="password" ng-class="{'is-invalid': (memberDetailForm.Password.$dirty || memberDetailForm.$submitted) && memberDetailForm.Password.$invalid }" name="Password" placeholder="{{ 'customer.register.password' | t }}" class="form-control" ng-required="$ctrl.requiredField('Password')" ng-disabled="$ctrl.disableField('Password')"></input>
                    <span class="text-danger" ng-if="(memberDetailForm.Password.$dirty || memberDetailForm.$submitted) && memberDetailForm.Password.$error.required" ng-bind="'{{ 'common.required' | t }}'"></span>
                    <span class="text-danger" ng-if="(memberDetailForm.Password.$dirty || memberDetailForm.$submitted) && !memberDetailForm.Password.$error.required && memberDetailForm.Password.$invalid">{{ 'common.invalid' | t }}</span>
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="row">
                <div class="col-md-5">
                    <div>
                        <label for="Roles" class="required">{{ 'customer.edit_profile.role' | t }}</label>
                        <select ng-model="$ctrl.member.role" ng-options="x as x.name for x in $ctrl.availableRoles" name="Roles" required class="form-control" size="1">
                            <option value="">Please select role</option>
                        </select>
                        <span class="text-danger" ng-if="(memberDetailForm.Roles.$dirty || memberDetailForm.$submitted) && memberDetailForm.Roles.$error.required" ng-bind="'{{ 'common.required' | t }}'"></span>
                    </div>
                </div>
            </div>
        </div>

    </div>
</form>
