<div class="col-md-8">
    <div class="pb-2">
        <h3>{{ 'customer.edit_profile.title' | t }}</h3>
    </div>
    <vc-errors message="errorMessage" errors="errors"></vc-errors>
    <form ng-submit="$ctrl.submit()" name="detailForm">
        <div class="form-group">
            <div class="row">
                <div class="col-md-6">
                    <label for="first_name" class="required">{{ 'customer.edit_profile.first_name' | t }}</label>
                    <input ng-class="{'is-invalid': (detailForm.first_name.$dirty || detailForm.$submitted) && detailForm.first_name.$invalid }" ng-model="$ctrl.member.firstName" name="first_name" placeholder="{{ 'customer.edit_profile.first_name' | t }}" class="form-control" required></input>
                    <span class="invalid-feedback" ng-if="(detailForm.first_name.$dirty || detailForm.$submitted) && detailForm.first_name.$error.required" ng-bind="'{{ 'common.required' | t }}'"></span>
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="row">
                <div class="col-md-6">
                    <label for="last_name" class="required">{{ 'customer.edit_profile.last_name' | t }}</label>
                    <input ng-class="{'is-invalid': (detailForm.last_name.$dirty || detailForm.$submitted) && detailForm.last_name.$invalid }" ng-model="$ctrl.member.lastName" name="last_name" placeholder="{{ 'customer.edit_profile.last_name' | t }}" class="form-control" required></input>
                    <span class="invalid-feedback" ng-if="(detailForm.last_name.$dirty || detailForm.$submitted) && detailForm.last_name.$error.required" ng-bind="'{{ 'common.required' | t }}'"></span>
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="row">
                <div class="col-md-6">
                    <label for="title">{{ 'customer.register.job_title' | t }}</label>
                    <input ng-model="$ctrl.member.title" type="text" name="title" placeholder="{{ 'customer.register.job_title_placeholder' | t }}" class="form-control"></input>
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="row">
                <div class="col-md-6">
                    <label for="email">{{ 'customer.edit_profile.email' | t }}</label>
                    <span ng-bind="$ctrl.member.email" name="email" class="d-block"></span>
                </div>
            </div>
        </div>

        <div class="form-group" ng-if="$ctrl.member.role.name">
            <div class="row">
                <div class="col-md-6">
                    <label for="role">{{ 'customer.edit_profile.role' | t }}</label>
                    <span ng-bind="$ctrl.member.role.name" name="role" class="d-block"></span>
                </div>
            </div>
        </div>

        <button class="btn btn-primary" ng-disabled="$ctrl.loader.isLoading || detailForm.$pristine">
            {{ 'customer.edit_profile.submit' | t }}
        </button>
    </form>
</div>
