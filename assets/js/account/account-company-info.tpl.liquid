<div class="col-md-8">
<div class="one-half">
    <div class="page-header">
        <h3>{{ 'customer.edit_company_info.title' | t }}</h3>
    </div>
    <vc-errors message="errorMessage" errors="errors"></vc-errors>
    <form ng-submit="$ctrl.submit()" name="detailForm">
        <vc-labeled-input value="$ctrl.company.name" name="company_name" placeholder="{{ 'customer.edit_company_info.company_name' | t }}" form="detailForm" required="true" autofocus="true" maxlength="128"></vc-labeled-input>

        <button va-permission="storefront:organization:edit" ng-click="$ctrl.updateCompanyInfo($ctrl.company)" class="btn btn-primary" ng-disabled="$ctrl.loader.isLoading" ng-class="{ 'btn--disabled': detailForm.$pristine, 'loading': $ctrl.loader.isLoading }">
            <span class="btn-text">{{ 'customer.edit_profile.submit' | t }}</span>
            <span class="btn-loading"></span>
        </button>
    </form>
</div>
<div class="page-header">
    <h4>{{ 'customer.edit_company_info.company_addresses' | t }}</h4>
</div>
<div class="vc-product-address">
    <ul class="list">
        <li ng-repeat="item in $ctrl.company.addresses" ng-class="{ 'list-item': $ctrl.editIdx !== $index, 'one-half': $ctrl.editIdx === $index }">
            <a ng-click="$ctrl.delete($index)" ng-if="$ctrl.editIdx !== $index" class="list-action">{{ 'customer.addresses.delete' | t }}</a>
            <a ng-click="$ctrl.edit($index)" ng-if="$ctrl.editIdx !== $index" class="list-action">{{ 'customer.addresses.edit' | t }}</a>
            <h3 ng-if="$ctrl.editIdx === $index">{{ 'customer.addresses.edit_old' | t }}</h3>
            <vc-address address="$ctrl.editIdx === $index ? $ctrl.editItem : item" edit-mode="$ctrl.editIdx === $index" validation-container="$ctrl" countries="$ctrl.accountManager.availCountries" get-country-regions="$ctrl.accountManager.getCountryRegions(country)"></vc-address>
            <div ng-if="$ctrl.editIdx === $index" class="form-actions">
                <button ng-click="$ctrl.cancel()" ng-disabled="$ctrl.loader.isLoading" class="btn btn-primary" ng-class="{ 'btn--disabled': detailForm.$pristine, 'loading': $ctrl.loader.isLoading }">
                    <span class="btn-text">{{ 'customer.addresses.cancel' | t }}</span>
                    <span class="btn-loading"></span>
                </button>
                <span class="form-spacer"></span>
                <button va-permission="storefront:organization:edit" ng-click="$ctrl.submitCompanyAddress()" ng-disabled="$ctrl.loader.isLoading" class="btn btn-primary" ng-class="{ 'btn--disabled': detailForm.$pristine, 'loading': $ctrl.loader.isLoading }">
                    <span class="btn-text">{{ 'customer.addresses.update' | t }}</span>
                    <span class="btn-loading"></span>
                </button>
            </div>
        </li>
    </ul>

    <p ng-if="!$ctrl.company.addresses || !$ctrl.company.addresses.length">{{ 'customer.edit_company_info.no_addresses_message' | t }}</p>

    <button va-permission="storefront:organization:edit" ng-click="$ctrl.newAddress={}" ng-if="!$ctrl.newAddress && !($ctrl.editIdx >= 0)" class="btn btn-primary" ng-class="{ 'loading': $ctrl.loader.isLoading }" ng-disabled="$ctrl.loader.isLoading">
        <span class="btn-text">{{ 'customer.addresses.add_new' | t }}</span>
        <span class="btn-loading"></span>
    </button>
    <div ng-if="$ctrl.newAddress" class="one-half">
        <h2 ng-if="$ctrl.newAddress">{{ 'customer.addresses.add_new' | t }}</h2>
        <vc-address address="$ctrl.newAddress" edit-mode="true" validation-container="$ctrl" countries="$ctrl.accountManager.availCountries" get-country-regions="$ctrl.accountManager.getCountryRegions(country)" ng-if="$ctrl.newAddress"></vc-address>
        <div>
            <button ng-click="$ctrl.newAddress = null" class="btn btn-primary" ng-class="{ 'loading': $ctrl.loader.isLoading }" ng-disabled="$ctrl.loader.isLoading">
                <span class="btn-text">{{ 'customer.addresses.cancel' | t }}</span>
                <span class="btn-loading"></span>
            </button>
            <span class="form-spacer"></span>
            <button ng-click="$ctrl.addNewAddress()" ng-disabled="$ctrl.loader.isLoading" class="btn btn-primary" ng-class="{ 'btn--disabled': detailForm.$pristine, 'loading': $ctrl.loader.isLoading }">
                <span class="btn-text">{{ 'customer.addresses.add' | t }}</span>
                <span class="btn-loading"></span>
            </button>
        </div>
    </div>
</div>
</div>
