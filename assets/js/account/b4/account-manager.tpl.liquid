<div ng-if="$ctrl.loader.isLoading" class="loader">
    <div class="indicator"></div>
</div>
<div class="row">
    <div class="col" ng-class="{'loading': $ctrl.loader.isLoading }">
        <div class="row">
            <div class="col-4 col-sm-2">
                <div class="row pt-3 pb-2">
                    <h3>{{ 'customer.account.title' | t }}</h3>
                </div>
                <div class="row">
                    <ul class="vertical-menu nav flex-column">
                        <li class="nav-item" ui-sref-active="border-left border-primary border-3 bg-gray-200">
                            <a class="nav-link text-dark text-condensed" href="{{ 'account#/' | absolute_url }}">{{ 'customer.account.menu_label.dashboard' | t }}</a>
                        </li>
                        <li class="nav-item" ui-sref-active="border-left border-primary border-3 bg-gray-200">
                            <!-- <a href="{{ 'account#/orders/' | absolute_url }}">{{ 'customer.account.menu_label.orders' | t }}</a> -->
                            <a class="nav-link text-dark text-condensed" ui-sref="orders.list">{{ 'customer.account.menu_label.orders' | t }}</a>
                        </li>
                        <li class="nav-item" ui-sref-active="border-left border-primary border-3 bg-gray-200">
                            <a class="nav-link text-dark text-condensed" href="{{ 'account#/profile/' | absolute_url }}">{{ 'customer.account.menu_label.profile' | t }}</a>
                        </li>
                        <li class="nav-item" ui-sref-active="border-left border-primary border-3 bg-gray-200">
                            <a class="nav-link text-dark text-condensed" href="{{ 'account#/addresses/' | absolute_url }}">{{ 'customer.account.menu_label.addresses' | t }}</a>
                        </li>
                        <li class="nav-item" ui-sref-active="border-left border-primary border-3 bg-gray-200">
                            <a class="nav-link text-dark text-condensed" href="{{ 'account#/changePassword/' | absolute_url }}">{{ 'customer.account.menu_label.change_password' | t }}</a>
                        </li>
                        <li class="nav-item" ui-sref-active="border-left border-primary border-3 bg-gray-200">
                            <a class="nav-link text-dark text-condensed" href="{{ 'account#/lists/' | absolute_url }}">{{ 'customer.account.menu_label.wishlist' | t }}</a>
                        </li>
                        {% if shop.quotes_enabled %}
                        <li class="nav-item" ui-sref-active="border-left border-primary border-3 bg-gray-200">
                            <a class="nav-link text-dark text-condensed" href="{{ 'account#/quotes/' | absolute_url }}">{{ 'customer.account.menu_label.quotes' | t }}</a>
                        </li>
                        {% endif %}
                        <li class="nav-item" ui-sref-active="border-left border-primary border-3 bg-gray-200">
                            <a class="nav-link text-dark text-condensed" href="{{ 'account#/checkoutDefaults/' | absolute_url }}">Checkout Details</a>
                        </li>
                    </ul>
                </div>
                <div va-permission="storefront:organization:edit">
                    <div class="row">
                        <hr>
                        <h3>{{ 'customer.account.corporate' | t }}</h3>
                    </div>
                    <div class="row">
                        <ul class="nav nav-pills nav-stacked left-nav">
                            <li ui-sref-active="active">
                                <a class="nav-link text-dark text-condensed" ui-sref="companyInfo">{{ 'customer.account.menu_label.company_info' | t }}</a>
                            </li>
                            <li va-permission="storefront:user:view" ui-sref-active="active">
                                <a class="nav-link text-dark text-condensed" ui-sref="members.list">{{ 'customer.account.menu_label.company_members' | t }}</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="col-8 col-sm-10">
                <ui-view></ui-view>
            </div>
        </div>
    </div>
</div>
