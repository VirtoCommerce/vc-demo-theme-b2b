<div class="card">
    <div class="card-header">
        <div class="d-flex justify-content-between align-items-center">
            <span class="h4 mb-0">{{ 'customer.dashboard.users' | t }}</span>
            <a ui-sref="members.list" va-permission="storefront:organization:edit">
                {{ 'customer.dashboard.all_users_link_text' | t }} <span class="fa fa-arrow-right pl-2"></span>
            </a>
        </div>
    </div>
    <div va-permission="storefront:organization:edit" id="user-list-table">
        <table class="table table-striped table-bordered table-head-hover mb-0" ng-if="$ctrl.entries.length">
            <thead>
                <tr class="text-condensed">
                    <th>{{ 'customer.edit_company_members.full_name' | t }}</th>
                    <th>{{ 'customer.edit_company_members.email' | t }}</th>
                    <th>{{ 'customer.edit_company_members.role' | t }}</th>
                    <th>{{ 'customer.edit_company_members.status' | t }}</th>
                </tr>
            </thead>
            <tbody>
                <tr ng-repeat="member in $ctrl.entries" ng-class="{ 'user-inactive': member.isLockedOut }">
                    <td ng-bind="member.fullName"></td>
                    <td ng-bind="member.email"></td>
                    <td ng-bind="member.role.name"></td>
                    <td ng-bind="member.isLockedOut ? 'Inactive' : 'Active'" ng-class="{ 'text-dark-green': !member.isLockedOut }"></td>
                </tr>
            </tbody>
        </table>
        <div class="row">
            <div class="col-md-12">
                <p ng-if="!$ctrl.entries.length && !$ctrl.loader.isLoading" class="text-center">{{ 'customer.edit_company_members.none' | t }}</p>
            </div>
        </div>
    </div>
    <div ng-if="$ctrl.userTableHided()" class="card-body d-flex align-items-center no-permission">
        <img src="{{ 'cabinet.svg' | asset_url }}" />
        <p class="text-helvetica font-weight-bold message">{{ 'customer.dashboard.no_permission_message' | t }}</p>
    </div>
</div>






