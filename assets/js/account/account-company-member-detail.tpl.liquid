<div class="one-whole" ng-init="init('{{ shop.id }}')">
    <h3>{{ 'customer.edit_company_member.title' | t: '{{$ctrl.member.fullName}}' }}</h3>

    <div ng-show="$ctrl.member">
        <vc-member-detail member="$ctrl.member" member-component="$ctrl.memberComponent" fields-config="$ctrl.fieldsConfig"></vc-member-detail>
    </div>

    <a ui-sref="members.list({pageNumber: $ctrl.pageNumber})" class="btn btn-default btn-marging-right">
        <span class="btn-text">{{ 'customer.edit_company_member.return_text' | t }}</span>
    </a>
    <button ng-click="$ctrl.submitMember()" ng-disabled="$ctrl.loader.isLoading" class="btn btn-primary" ng-class="{ 'loading': $ctrl.loader.isLoading }">
        <span class="btn-text">{{ 'customer.edit_company_member.btn_update' | t }}</span>
        <span class="btn-loading"></span>
    </button>
</div>
