<style>
  {% include 'blocks/helpers/background-css' %}

  {%- if block.overlayColor != '' %}
    #{{block.__id}} > .block:after {
      content: ' ';
      background-color: {{ block.overlayColor }};
      position: absolute;
      left: 0;
      top: 0;
      right: 0;
      bottom: 0;
      z-index: 5;
    }
    #{{block.__id}} .cover-container {
      z-index: 10;
      position: relative;
    }
  {% endif %}

  {%- if block.subtitleColor != '' %}
    #{{block.__id}} .subtitle,
    #{{block.__id}} .subtitle > * {
      color: {{block.subtitleColor}};    
    }
  {% endif %}

  {%- if block.noteColor != '' %}
    #{{block.__id}} .note {
      color: {{block.noteColor}} !important;
    }
  {% endif %}

  {% include 'blocks/helpers/title-css' %}
</style>
