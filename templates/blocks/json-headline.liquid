{% include 'blocks/helpers/hide-criteria' %}
{% include 'blocks/helpers/cover-style' %}

<div id="{{ block.__id }}"
     class="{%- if block.fullWidth == 'True' -%}
                container-fluid w-auto mx-md-4
            {%- else -%}
                container-md
            {%- endif -%}
            {%- if hideBlock == true -%}
              d-none
            {%- endif -%}"
     style="{% include 'blocks/helpers/block-margins' %}">
    <div class="block row position-relative justify-content-center"
         style="{%- include 'blocks/helpers/block-inner-paddings' -%}
                {%- if block.background != empty and block.background.url != '' -%}
                    background-image: url({{ block.background.url | strip_start: '/' }});
                {%- endif -%}">
        <div class="{{ block.textAreaWidth }} text-center ">
            {% if block.note %}
                <div class="note h2 text-muted mb-3">
                    {{ block.note }}
                </div>
            {% endif %}

            {% if block.title %}
                <div class="mb-4 mb-md-3">
                    {% include 'blocks/helpers/block-title' %}
                </div>
            {% endif %}

            {% if block.subtitle %}
                <div class="subtitle lead font-weight-bold mb-5">
                    {{ block.subtitle }}
                </div>
            {% endif %}
            
            {% assign button = block.firstButton %}
            {% include 'blocks/helpers/button' %}

            <div class="w-100 d-md-none"></div>

            {% if block.secondButton and block.secondButton.urlText and block.secondButton.urlText != '' %}
                <span class="mt-4 mt-md-0 
                            {%- if block.firstButton and block.firstButton.urlText and block.firstButton.urlText != '' -%}
                                ml-md-4
                            {%- endif -%}">
                    {% assign button = block.secondButton %}
                    {% include 'blocks/helpers/button' %}
                </span>
            {% endif %}
        </div>
    </div>
</div>
