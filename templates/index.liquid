{% layout 'bootstrap_migration' %}

{% if customer and customer.is_registered_user %}
    <script>
            window.location.replace("{{ '/account' | absolute_url }}");
    </script>
{% endif %}
<main class="container" role="main">
    <div class="row">
        <div class="col-sm-4">
            {% include 'bootstrap-migration/index/asides' %}
        </div>
        <div class="col-sm-8">
                <div id="carousel" class="carousel slide" data-ride="carousel">
                    <div class="carousel-inner">
                        <div class="carusel-item active">
                            <img class="d-block w-100" src="{{ 'main-page-pic@x2.png' | asset_url }}" alt="...">
                        </div>
                    </div>
                </div>

        </div>
    </div>
    <div id="four-blocks-on-main">
        <div class="row flexible">
            <div class="col-md-12">
                <h3 class="text-center">Professional purchases have never been that easy</h3>
            </div>
            <div class="col-md-3">
                <div class="block-wraper">
                    <img src="{{ 'main-ico-corp.svg' | asset_url }}" alt="..." />
                    <p class="decription">Corporate account <br /> management</p>
                </div>
            </div>
            <div class="col-md-3">
                <div class="block-wraper">
                    <img src="{{ 'main-ico-price.svg' | asset_url }}" alt="..." />
                    <p class="decription">Quote management price <br /> negotiation</p>
                </div>
            </div>
            <div class="col-md-3">
                <div class="block-wraper">
                    <img src="{{ 'main-ico-shop.svg' | asset_url }}" alt="..." />
                    <p class="decription">Multiple stores, channels <br /> and regions</p>
                </div>
            </div>
            <div class="col-md-3">
                <div class="block-wraper">
                    <img src="{{ 'main-ico-calc.svg' | asset_url }}" alt="..." />
                    <p class="decription">B2B personalization and price <br /> management</p>
                </div>
            </div>
        </div>
    </div>
</main>
