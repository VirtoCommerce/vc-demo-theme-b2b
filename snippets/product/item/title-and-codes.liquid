{% assign response_group = default_product_search_resp_group | plus: item_resp_group_variations | plus: item_resp_group_item_properties | plus: item_resp_group_item_editorial_reviews %}
<div class="text-uppercase">{{ product.properties['Brand'].value }}
</div>
<p>
    <a class="text-truncate" href="{{ product_url | append: '?resp_group=' | append: response_group }}">{{ product.title }}</a><br>
    <strong>{{ 'products.product.sku' | t }}</strong>&nbsp;<a href="{{ product_url| append: '?resp_group=' | append: response_group }}">{{ product.sku }}</a><br>
    <strong>{{ 'products.product.mmn' | t }}</strong>&nbsp;{{ product.properties['MMN'].value }}
</p>
