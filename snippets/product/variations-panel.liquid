{% if variants_size != 1 %}
    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <div class="row">
                        <div class="col-md-12">
                            <span class="h4">{{ 'products.variation.product_variations' | t }}</span>
                        </div>
                    </div>
                </div>
                    {% for variant in product.variants %}
                        <div class="panel-body row" style="display: flex;">
                            <div class="col-md-2">
                            {% if variant.primary_image %}
                                <img class="img-responsive" ng-src="{{ variant.primary_image.url | img_url: "46x46" }}" alt="{{ variant.primary_image.alt | escape }}" />
                            {% else %}
                                <img class="img-responsive" style="margin-top: 10px;" src="{{ 'no-image.svg' | asset_url }}" />
                            {% endif %}
                            </div>

                            <div class="col-md-7">
                                <p class="text-uppercase" style="margin-top: 10px;"><strong>Item #{{ variant.sku }}</strong></p>

                                <div ng-repeat="property in allVariationsMap['{{ variant.id }}'].variationProperties">

                             <table class="product-properties ">
                                <tr>
                                    <td class="property-label">
                                        <span >{% raw %}{{ property.name }}{% endraw %}</span></td>
                                    <td class="property">
                                        <span style="padding-left: 5px;"><strong>{% raw %}{{ property.value }}{% endraw %}</strong></span>
                                    </td>
                                </tr>
                             </table>
                                </div>
                                    {% if settings.show_prices_with_taxes %}
                                        {% assign price = variant.price_with_tax %}
                                        {% include 'product/price' %}
                                    {% else %}
                                        {% assign price = variant.price %}
                                        {% include 'product/price' %}
                                    {% endif %}
                            </div>

                            <div class="col-md-3" style="align-self: center;">
                                <div style="display:flex; flex-direction: row; justify-content: right; align-items: center">
                                    <label for="qty" style="padding-top: 4px;">Quantity</label>
                                    <input id="qty" class="form-control margin-right" />
                                </div>
                            </div>
                        </div>
                        <div class="border-bottom-light"></div>
                    {% endfor %}
            </div>
        </div>
    </div>
{% endif %}
