{% include 'product/type/with-variations/product-title-info' %}
<div class="row flexible">
    <div class="col-md-3">
        {% include 'product/image' %}
        {% include 'product/compare' %}
        {% include 'product/product-compare-list-bar' %}
    </div>

    <div class="col-md-6">
        {% if product.properties.size > 0 %}
            {% include 'product/type/common/product-properties' %}
            {% include 'product/type/common/product-description' %}
        {% endif %}
        {% include 'product/variations-panel' %}
    </div>

    <div class="col-md-3">
        <div class="panel panel-default price-panel">
            <div class="panel-heading">
                <div class="row">
                    <div class="col-md-12">
                        <span class="h4">Price & delivery</span>
                    </div>
                </div>
            </div>
            <div class="panel-body">
                <div class="price-block">
                    <dl class="dl-horizontal">
                        <dt class="text-bold">
                            <span class="pull-left">
                                    {{ 'products.variation.total_price' | t }}
                            </span>
                        </dt>
                        <dd>
                            <span class="pull-right text-bold text-green" ng-bind="totalPrice">
                            </span>
                        </dd>
                    </dl>
                </div>

                <div class="delivery-cart">
                        <button class="btn btn-lg btn-primary btn-block"
                        title="{{ 'products.general.add_to_cart' | t }}"
                        ng-click="addSelectedProductsToCart()">
                            {{ 'products.general.add_to_cart' | t }}
                        </button>
                </div>


                {% include 'product/type/common/product-action-buttons' %}

                <div>
                    <vc-shipping-type is-dropdown="false" pickup-method-code="{{ settings.pickup_shipping_method }}"></vc-shipping-type>
                </div>
            </div>
        </div>
    </div>

    {% include 'product/type/common/related-products' %}

</div>
