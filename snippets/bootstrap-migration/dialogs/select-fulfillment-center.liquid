<script id="storefront.select-fulfillment-center-dialog.tpl" type="text/ng-template">
    <div class="modal-header">
        <h4 class="modal-title">{{ 'inventory.select_branch.title' | t }}</h4>
        <button class="close" type="button" ng-click="close()" title="{{ 'inventory.select_branch.close' | t }}" aria-label="{{ 'inventory.select_branch.close' | t }}"><span aria-hidden="true">&times;</span></button>
    </div>
    <div class="modal-body" ng-controller="inventoryController" ng-init="searchFulfillmentCenters()">
        <div class="container-bordered container-drain">
            <p>{{ 'inventory.select_branch.enter_search_phrase' | t }}</p>
            <div class="row">
                <div class="col-md-12">
                    <div class="input-group" vc-enter-source>
                        <input class="form-control" type="text" ng-model="searchPhrase">
                        <span class="input-group-btn">
                            <a class="btn btn-default" href="" ng-click="searchFulfillmentCenters(searchPhrase)" vc-enter-target>{{ 'common.go' | t }}</a>
                        </span>
                    </div>
                </div>
            </div>
            <div class="row" ng-repeat="fulfillmentCenter in fulfillmentCenters">
                <div class="col-md-5">
                    <vc-address address="fulfillmentCenter.address">
                        <address-header>
                            <div class="h5" ng-bind="fulfillmentCenter.name"></div>
                        </address-header>
                    </vc-address>
                </div>
                <div class="col-md-2"><strong>1.3 mi</strong></div>
                <div class="col-md-2">1000 items available</div>
                <div class="col-md-3 form-group">
                    <a ng-if="dialogData.isFilter" class="btn btn-default form-control" vc-query-source="{% raw %}{ terms: { available_in: [fulfillmentCenter.id] } }{% endraw %}" switchable="false">Select</a>
                    <a ng-if="!dialogData.isFilter" class="btn btn-default form-control" ng-click="close(fulfillmentCenter)">Select</a>
                </div>
            </div>
        </div>
    </div>
</script>
