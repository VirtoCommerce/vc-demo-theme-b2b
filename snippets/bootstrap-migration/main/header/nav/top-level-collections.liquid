<ul class="nav">
    <li ng-class="{'active': isAllProductsOpen}" class="nav-item" ng-mouseenter="isAllProductsOpen = true" ng-mouseleave="isAllProductsOpen = false">
        <a id="all-products-popover" href="" class="text-uppercase nav-link p-3 text-condensed text-white" popover-class="rounded-0 hide-arrow" uib-popover-template="'all-products-popover.tpl'" popover-placement="bottom-left" popover-is-open="isAllProductsOpen" popover-trigger="'none'">
            {{ 'layout.products.products' | t }}&ensp;<i class="fa fa-angle-down"></i>
        </a>
        <script id="all-products-popover.tpl" type="text/ng-template">
            <div class="all-products-popover" ng-init='links = {{ linklists[settings.all_products_menu].links | json }}'>
                <div class="row">
                    <div class="col-md-6 py-1 px-4 popover-category" ng-repeat="link in links">
                        <ul class="nav text-nowrap">
                            <li>
                                <a ng-href="{% raw %}{{ link.url }}{% endraw %}" ng-bind="link.title" class="font-weight-bold text-condensed">
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </script>
    </li>
</ul>
