<div class="alert mb-0" role="alert" ng-class="{ 'alert-danger': storefrontNotification.type == 'error','alert-success': storefrontNotification.type == 'success' }" ng-if="storefrontNotification" ng-cloak>
    <button aria-label="Close" class="close text-white opacity-100 mt-n1" type="button" ng-click="closeNotification()">
        <span aria-hidden="true">Ã—</span>
    </button>
    <div ng-if="storefrontNotification.type == 'error'">
        <strong>Oops! An error was occured!</strong>
    Please send the technical details to us.<br /><br />
        <a class="font-weight-bold text-danger-alert" ng-click="toggleNotificationDetails()">
            <i class="fa" ng-class="{ 'fa-angle-down': !storefrontNotification.detailsVisible, 'fa-angle-up': storefrontNotification.detailsVisible }" aria-hidden="true"></i>
            <span ng-if="!storefrontNotification.detailsVisible">Show me technical details</span>
            <span ng-if="storefrontNotification.detailsVisible">Hide the details</span>
        </a>
    </div>
    <p ng-if="storefrontNotification.detailsVisible && storefrontNotification.title" class="m-0" ng-bind="storefrontNotification.title"></p>
    <p ng-if="storefrontNotification.detailsVisible && storefrontNotification.message" class="m-0" ng-class="{'mt-1': storefrontNotification.detailsVisible && storefrontNotification.title}" ng-bind="storefrontNotification.message"></p>
</div>
