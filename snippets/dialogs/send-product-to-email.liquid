<script id="storefront.send-product-to-email.tpl" type="text/ng-template">
    <div class="modal-header align-items-center bg-gray-modal">
        <h4 class="modal-title">Send product to...</h4>
        <button type="button" class="close py-0 mt-n3" ng-click="close()" title="{{ 'cart.general.close_cart' | t }}" aria-label="{{ 'cart.general.close_cart' | t }}"><span aria-hidden="true">&times;</span></button>
    </div>
    <div class="modal-body">
        <input class="form-control" ng-model="email" type="email" placeholder="Enter e-mail">
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-dark" ng-click="close()">Close</button>
        <button type="button" class="btn btn-primary" ng-click="send(email)">Send</button>
    </div>
</script>
